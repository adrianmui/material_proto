<% content_for(:stylesheet) { 'signup_page' } %>
<div class="row">
  <div id="signup-page-container" class="col-md-4 col-md-offset-4">
    <h2>Sign Up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name, class: 'form-group')) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.text_field :name, autofocus: true, placeholder: 'Name', class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.email_field :email, placeholder: 'Email', class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'form-control' %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Password confirmation', class: 'form-control' %>
      </div>

      <div id="submit-button-container" class="actions">
        <button class="btn btn-raised btn-primary" type="submit" name="action">
          <span class="col-md-6">Sign up</span>
          <i class="material-icons right col-md-3 col-md-offset-2">send</i>
        </button>
      </div>

      <p id="log-in-link">Already have an account? <%= link_to('Log in', new_user_session_path) %></p>

    <% end %>

  </div>
</div>
